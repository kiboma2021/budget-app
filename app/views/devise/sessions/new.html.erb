<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  
<div class="field form-group  p-2">
  <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
</div>
  
<div class="field form-group  p-2">
  <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
</div>
    
  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
